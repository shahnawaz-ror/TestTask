<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table class="table responsive">
  <thead>
    <tr>
      <th>Initiate date</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Price</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.initiate_date %></td>
        <td><%= transaction.latitude %></td>
        <td><%= transaction.longitude %></td>
        <td><%= transaction.price %></td>
        <td><%= transaction.user.fulle_name %> <%= link_to 'Show User Rewards', user_reward_reward_list_path(transaction.user) %> <%= link_to 'Show Point History', user_point_histories_path(transaction.user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_user_transaction_path %>
